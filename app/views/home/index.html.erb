<div class="modal fade" id="SignUpModal" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <button type="button" class="btn facebook-button"><i class="fab fa-facebook-f facebook-icon"></i>Continue with Facebook</button>
        <button type="button" class="btn google-button "><i class="fab fa-google google-icon"></i>Continue with Google</button>
        <div class='hr-or'></div>
        <button type="button" class="btn email-button "><i class="far fa-envelope email-icon"></i>Sign Up with Email</button>
      </div>
      <div class="modal-footer custom-modal-footer">
        <p>Already have an account <a href="#">Login</a></p>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="LoginModal" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= link_to user_facebook_omniauth_authorize_path , class:"btn facebook-button" do %>
          <i class="fab fa-facebook-f facebook-icon"></i>Continue with Facebook
        <% end %>
        <%= link_to user_google_oauth2_omniauth_authorize_path , class:"btn google-button" do %>
          <i class="fab fa-google google-icon"></i>Continue with Google
        <% end %>
        <form>
          <div class="form-group">
            <div class="input-group mb-3">
              <input type="text" class="form-control" placeholder="Enter Email" aria-label="Recipient's username">
              <div class="input-group-append">
                <span class="input-group-text"><i class="far fa-envelope"></i></span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="input-group mb-3">
              <input type="password" class="form-control" placeholder="Enter Password" aria-label="Recipient's username">
              <div class="input-group-append">
                <span class="input-group-text"><i class="fas fa-lock"></i></span>
              </div>
            </div>
          </div>
          <div class="form-check">
            <input type="checkbox" class="form-check-input" id="ModalRememberMe">
            <label class="form-check-label" for="ModalRememberMe">Remeber Me</label>
          </div>
          <button type="button" class="btn login-button ">Login</button>
          <div class="col">
            <a href="#" class="login-modal-forgot-password">Forgot Password</a>
          </div>
        </form>
      </div>
      <div class="modal-footer custom-modal-footer">
        <p>Donâ€™t have an account? <a href="#">Sign Up</a></p>
      </div>
    </div>
  </div>
</div>

