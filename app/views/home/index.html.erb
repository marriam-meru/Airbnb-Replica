<div class="fluid-container cards-container">
  <h3 class="cards-div-heading">Introducing Airbnb Adventures</h3>
  <h6 class="cards-div-heading2">Multi-day trips led by local expertsâ€”activities, meals, and stays included</h6>
  <div class="row custom-cards-row">
    <% @images.each do |image| %>
      <div class="col custom-cards-col">
        <div class="card custom-cards-1">
          <div class="card-body custom-cards-1-body">
            <%= image_tag image.image_name, class: 'card-img-top custom-cards-1-image'%>
            <p class="custom-card1-title"><%= image.title.upcase %></p>
            <p><%= image.description %></p>
          </div>
        </div>
      </div>
    <% end%>
  </div>
  <button class="btn cards-container-loadmore-button">Load More..>></button>
</div>

<div class="fluid-container second-cards-container">
  <h3 class="second-cards-div-heading">Places to stay around the world</h3>
  <div class="row custom-second-cards-row">
    <% @second_images.each do |image| %>
      <div class="col custom-second-cards-col">
        <div class="card custom-second-cards">
          <div class="card-body custom-second-cards-body">
            <%= image_tag image.imange_name, class: 'card-img-top custom-second-cards-image'%>
            <div class="row custom-second-cards-second-row">
              <% if image.super_host? %>
                <div class="col-lg-3 pr-0"><button class="rounded custom-second-card-super-host">Super Host</button></div>
                <div class="col-lg-6 pr-0 pl-3"><p class="custom-second-card-title"><%= image.title %></p></div>
                <div class="col-lg-3"><p class="custom-second-card-rating"><i class="far fa-star custom-second-cards-star"></i><%= image.rating %></p></div>
              <% else %>
                <div class="col-lg-8"><p class="custom-second-card-title"><%= image.title %></p></div>
                <div class="col-lg-4"><p class="custom-second-card-rating move-right"><i class="far fa-star custom-second-cards-star"></i><%= image.rating %></p></div>
              <% end %>
              
            </div>
            <p class="custom-second-card-description"><%= image.description %></p>
            <p><span class="custom-second-card-price">$<%= image.price %></span> / night</p>
          </div>
        </div>
      </div>
    <% end%>
  </div>
</div>

