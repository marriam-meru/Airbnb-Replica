      <div class="card search-card">
        <div class="card-body">
          <h5 class="card-title search-card-title">Book unique places to stay and things to do.</h5>
          <form class="search-form">
            <div class="form-group">
              <label for="InputWhere">WHERE</label>
              <input type="text" class="form-control" id="InputWhere" placeholder="Anywhere">
            </div>
            <div class="form-group">
              <div class="row">
                <div class="col-lg-6"> 
                  <label for="InputCheckin">CHECK-IN</label>
                  <input type="text" class="form-control" id="InputCheckin" placeholder="mm/dd/yyyy">
                </div>
                <div class="col-lg-6">
                  <label for="InputCheckout">CHECK-OUT</label>
                  <input type="text" class="form-control" id="InputCheckout" placeholder="mm/dd/yyyy">
                </div>
              </div>
            </div>
            <div class="form-group">
              <label for="Select1">Guests</label>
              <select class="form-control" id="Select1">
                <option>Adult</option>
                <option>Children</option>
                <option>Infants</option>
              </select>
            </div>
            <button type="Search" class="btn search-card-button">Submit</button>
          </form>
        </div>
      </div>

      <div class="align-self-end ">
        <a href="#" class="main-image-bottom-link">Over 3000 places to visit</a>
      </div>
    </div>
  </div>
</div>

